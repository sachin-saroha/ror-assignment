<p id="notice"><%= notice %></p>

<h1>Products</h1>

<table>
  <thead>
    <tr>
      <th>Item</th>
      <th>Cost</th>
      <th>Purpose</th>
      <th>Outofstock</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.Item_id %></td>
        <td><%= product.Cost %></td>
        <td><%= product.Purpose %></td>
        <td><%= product.outofstock %></td>
        <td class="a"><%= link_to 'Show', product %></td>
        <td class="a"><%= link_to 'Edit', edit_product_path(product) %></td>
        <td class="a"><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

